{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./app",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "isolatedModules": true,
    "jsxImportSource": "preact"
  }
}
